@model List<ManagementApp.Models.Domain.Employee>
    <link rel="stylesheet" href="~/css/default.css" id="theme-color">
    <style>
        .td {
            color: white;
        }
    </style>
    <h1>Employees</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Salary</th>
                <th>Date of Birth</th>
                <th>Department</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.Salary</td>
                    <td>@employee.DateOfBirth.ToShortDateString()</td>
                    <td>@employee.Department</td>
                    <td><a class="btn btn-block btn-info" href="Employees/View/@employee.Id">View</a></td>
                </tr>
            }
        </tbody>
    </table>


    <script src="js/scripts.js"></script>