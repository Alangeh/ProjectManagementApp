@{
    ViewData["Title"] = "Home Page";
}

<style>
</style>

<div class="text-center" style="margin-top: 20px;">
    <h1 class="display-4">Welcome</h1>
    <p>To The Employee Management App</p>
</div>
<section class="pt-6 pb-7" id="features">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto text-center">
                <h2 class="heading-black">URM offers everything you need.</h2>
                <p class="text-muted lead">
                    With its dynamic platform, it offers a high standard user-friendly environment for management.
                </p>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-10 mx-auto">
                <div class="row feature-boxes">
                    <div class="col-md-6 box">
                        <div class="icon-box box-primary">
                            <div class="icon-box-inner">
                                <span data-feather="edit-3" width="35" height="35"></span>
                            </div>
                        </div>
                        <h5>Create once. Share everywhere.</h5>
                        <p class="text-muted">
                            It is a multiuser platform that can be accessed from anywhere in the world.
                        </p>
                    </div>
                    <div class="col-md-6 box">
                        <div class="icon-box box-success">
                            <div class="icon-box-inner">
                                <span data-feather="monitor" width="35" height="35"></span>
                            </div>
                        </div>
                        <h5>Unlimited devices</h5>
                        <p class="text-muted">
                            Connect to your account using unlimited devices.
                        </p>
                    </div>
                    <div class="col-md-6 box">
                        <div class="icon-box box-danger">
                            <div class="icon-box-inner">
                                <span data-feather="layout" width="35" height="35"></span>
                            </div>
                        </div>
                        <h5>Beautiful tempates & layouts</h5>
                        <p class="text-muted">
                            User-friendly, easy to understand, easy to find your way around.
                        </p>
                    </div>
                    <div class="col-md-6 box">
                        <div class="icon-box box-info">
                            <div class="icon-box-inner">
                                <span data-feather="globe" width="35" height="35"></span>
                            </div>
                        </div>
                        <h5>Available globally</h5>
                        <p class="text-muted">
                            Access from anywhere in the world at any time.
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-6">
            <div class="col-md-6 mr-auto">
                <h2>URM is more than just an employee management app.</h2>
                <p class="mb-5">It also manages projects, helping you and your team share data, and product 100% efficient work output.</p>
                <a href="#" class="btn btn-light">
                    Try the live demo
                </a>
            </div>
            <div class="col-md-5">
                <div class="slick-about">
                    <img src="img/blog-1.jpg" class="img-fluid rounded d-block mx-auto" alt="Work 1" />
                    <img src="img/blog-2.jpg" class="img-fluid rounded d-block mx-auto" alt="Work 2" />
                    <img src="img/blog-3.jpg" class="img-fluid rounded d-block mx-auto" alt="Work 3" />
                </div>
            </div>
        </div>
    </div>
</section>

